		 <script
					location="component://marketing/webapp/sfa/WEB-INF/action/reports/AccountsByOpportunities.groovy" />
		</actions>
		<row-actions>
			<entity-one entity-name="Person" value-field="person">
				<field-map field-name="partyId" value="${partyId}" />
			</entity-one>
			<entity-one entity-name="Party" value-field="Party">
			 <field-map field-name="partyId" value="${partyId}" />
			</entity-one>
		</row-actions>
		
		<field name="companyName" title="Account Name">
			<display description="${person.firstName}  [${partyId}]" />
		</field>
		<field name="createdDate"><display type="date" default-value="${Party.createdDate}"/></field>
	    <field name="noOpp" title="No.of Opportunities"><display></display></field>
		<field name="totalAmount"><display></display></field>
	</form>
    
