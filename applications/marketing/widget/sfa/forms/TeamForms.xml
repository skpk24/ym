	<form name="FindTeam" type="single" target="FindTeamMembers">

		<field name="groupName" title="Sales Team Name">
			<text-find />
		</field>
		<field name="partyTypeId">
			<hidden value="SALES_GROUP" />
		</field>
		<field name="groupNameLocal">
			<hidden value="SALES_GROUP" />
		</field>
		<field name="submitButton" title="submit">
			<submit />
		</field>
	</form>

	<form name="CreateTeam" type="single" target="CreateTeamAction">
		<actions>
			<script
				location="component://marketing/webapp/marketing/WEB-INF/actions/TeamPermissions.groovy" />

			<set field="bestCost" value="${bestCost}" />
		</actions>
		<alt-target use-when="groupName!=null" target="EditTeam" />

		<field name="groupName" title="Sales Team Name">
			<text />
		</field>
		<field name="teamId" id-name="teamId" field-name="partyId"
			title="Lead Name">
			<drop-down allow-multiple="false" allow-empty="true">
				<entity-options entity-name="PartyRoleAndPartyDetail"
					description="${firstName} ${middleName} ${lastName} ${groupName}(${partyId})">
					<entity-constraint name="roleTypeId" operator="equals"
						value="PROSPECT_LEAD" />
					<entity-constraint name="statusId" operator="not-equals"
						value="SFA_CLOSED" />
				</entity-options>
			</drop-down>
		</field>
		<field name="partyTypeId">
			<hidden value="SALES_GROUP" />
		</field>
		<field name="teamTypeId">
			<hidden value="TEAM_TARGET" />
		</field>

		<field name="targetCost" title="Team Target Amount">
			<text size="15" />
		</field>
		<field name="bestCaseCost" use-when="bestCost!=null">
			<text size="15" />
		</field>
		<field name="closedCost" title="Closed Target">
			<text size="15" />
		</field>
		<field name="currencyUomId" title="Currency" position="2"
			widget-style="required">
			<drop-down allow-empty="true" no-current-selected-key="INR">
				<entity-options key-field-name="uomId"
					description="${abbreviation} - ${description}" entity-name="Uom">
					<entity-constraint name="uomTypeId" operator="equals"
						value="CURRENCY_MEASURE" />
					<entity-order-by field-name="abbreviation" />
				</entity-options>
			</drop-down>
		</field>
		<field name="fromDate" title="Sales Target From Date">
			<date-time />
		</field>
		<field name="toDate" title="Sales Target to Date">
			<date-time />
		</field>


		<field name="stateGeoId" title="state">
			<drop-down allow-empty="true" no-current-selected-key="">
				<entity-options entity-name="Geo" description="${geoName}"
					key-field-name="geoId">
					<entity-constraint name="geoTypeId" value="STATE" />
				</entity-options>
			</drop-down>
		</field>

		<field name="countryGeoId" title="Country">
			<drop-down allow-empty="true" no-current-selected-key="IND">
				<entity-options entity-name="Geo" description="${geoName}"
					key-field-name="geoId">
					<entity-constraint name="geoTypeId" value="COUNTRY" />
				</entity-options>
			</drop-down>
		</field>
		<field name="zoneId" title="Zone">
			<drop-down allow-empty="true">
				<option key="EAST_ZONE" description="East Zone" />
				<option key="WEST_ZONE" description="West Zone" />
				<option key="NORTH_ZONE" description="North Zone" />
				<option key="SOUTH_ZONE" description="South Zone" />
			</drop-down>
		</field>

		<field name="groupNameLocal">
			<hidden value="SALES_GROUP" />
		</field>
		<field name="comments" title="${uiLabelMap.Description}">
			<textarea />
		</field>
		<field name="submitButton" title="Create" event="onclick"
			action="javascript:
		 var leadParty =   document.getElementById('teamId').value;
		 if(leadParty=''||leadParty.length==0){
		 alert('Please Choose Lead');
		 return false ;
		 }
		
		">
			<submit />
		</field>
	</form>

	<form name="ListTeam" type="list" list-name="partyAndGroup"
		odd-row-style="alternate-row" list-entry-name="partyAndGroup"
