<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
	<screen name="sfaReportsMain">
		<section>
			<actions>
				<set field="secondaryMenuName" value="SfaMainTabBar" global="true" />
				<set field="secondaryMenuLocation" value="component://marketing/widget/sfa/SfaMenus.xml"
					global="true" />
				<!-- <set field="titleProperty" value="MarketingFindLeads"/> -->
				<set field="currentUrl" value="sfaReports" />
				<set field="headerItem" value="sfa" />
				<set field="tabButtonItem1" value="" />
				<set field="tabButtonItem" value="Reports" />
				<script
					location="component://marketing/webapp/sfa/WEB-INF/action/reports/SFAReports.groovy" />
				<set field="reportNameForm" value="${reportNameForm}" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
						<section>
							<widgets>
								<container style="no-clear">
									<include-menu name="LeadFindTabBar"
										location="component://marketing/widget/sfa/SfaMenus.xml" />

									<screenlet collapsible="true" initially-collapsed="false"
										id="LeadForms" title="Report Options">
										<include-form name="sfaReportsForm"
											location="component://marketing/widget/sfa/marketting/ReportForms.xml" />
									</screenlet>
									<section>
										<condition>
											<not>
												<if-empty field="reportNameForm" />
											</not>
										</condition>
										<widgets>
											<screenlet collapsible="true" initially-collapsed="false"
												id="ListLeads" title="${reportNameScreen}">
												<link target="${exportToExcel}" target-window="_blank"
													link-type="anchor" prefix="" text="Export">
													<image src="/images/sfa/reports/report_excel.png" id="feedIcon"
														height="12px" />
												</link>
												<include-form name="${reportNameForm}"
													location="component://marketing/widget/sfa/marketting/ReportForms.xml" />
											</screenlet>
										</widgets>
									</section>
								</container>
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>


</screens>
