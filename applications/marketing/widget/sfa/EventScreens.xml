    <screen name="LookupCases">
        <section>
            <actions>
               <!--  <script location="component://crmsfa/webapp/crmsfa/WEB-INF/actions/includes/pagination.bsh"/> -->
                <!--  <script location="component://marketing/webapp/sfa/WEB-INF/action/findCases.groovy"/>-->
                <!-- <script location="component://marketing/webapp/sfa/WEB-INF/action/listCases.bsh"/> -->                
                <entity-condition list="custRequest" entity-name="CustRequest">
                  <condition-expr field-name="priority" from-field="parameters.priority"/>
                   <condition-expr field-name="priority" from-field="parameters.custRequestId"/>
                  <condition-expr field-name="subject" from-field="parameters.custRequestName"/>
                   <condition-expr field-name="reason" from-field="parameters.reason"/>
                  <condition-expr field-name="custRequestTypeId" from-field="parameters.custRequestTypeId"/>
                  <condition-expr field-name="statusId" from-field="parameters.statusId"/>
                </entity-condition> 
            </actions>
            <widgets>
                 <decorator-screen name="CommonEventDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                       <!--  <container style="subSectionBlock">
                            <container style="subSectionHeader"><label style="subSectionTitle">${uiLabelMap.CrmFindCases}</label></container>
                            <include-form name="FindCasesForm" location="component://marketing/widget/sfa/forms/CasesForms.xml"/>
                        </container> -->
                            <platform-specific><html><html-template location="component://marketing/webapp/sfa/listCases.ftl"/></html></platform-specific>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
