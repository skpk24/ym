	<screen name="DashboardsMain">
		<section>
			<actions>
				<set field="secondaryMenuName" value="SfaMainTabBar" global="true" />
				<set field="secondaryMenuLocation" value="component://marketing/widget/sfa/SfaMenus.xml"
					global="true" />
				<!-- <set field="titleProperty" value="MarketingFindLeads"/> -->
				<set field="currentUrl" value="sfaReports" />
				<set field="headerItem" value="sfa" />
				<set field="tabButtonItem1" value="" />
				<set field="tabButtonItem" value="Dashboards" />
				<script
					location="component://marketing/webapp/sfa/WEB-INF/action/reports/dashboards.groovy" />
				<set field="reportNameForm" value="${reportNameForm}" />
			</actions>
			<widgets>
				<decorator-screen name="main-decorator"
					location="${parameters.mainDecoratorLocation}">
					<!--
						<decorator-section name="left-column"> <include-screen
						name="leftbar"
						location="component://marketing/widget/sfa/CommonScreens.xml"/>
						</decorator-section>
					-->
					<decorator-section name="body">
						<section>
							<widgets>
								<container style="no-clear">
									<include-menu name="LeadFindTabBar"
										location="component://marketing/widget/sfa/SfaMenus.xml" />

									<screenlet collapsible="true" initially-collapsed="false"
										id="LeadForms" title="Dashboard Options">
										<include-form name="dashboardForm"
											location="component://marketing/widget/sfa/marketting/ReportForms.xml" />
									</screenlet>
									<section>
										<condition>
											<not>
												<if-empty field="dashboardScreenletName" />
											</not>
										</condition>
										<widgets>
											<screenlet collapsible="true" initially-collapsed="false"
												id="ListLeads" title="${dashboardScreenletName}">
												<platform-specific>
													<html>
														<html-template
															location="component://marketing/webapp/sfa/Dashboard/CombinedDashboard.ftl" />
													</html>
												</platform-specific>
											</screenlet>
										</widgets>
									</section>
								</container>
							</widgets>
						</section>
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>


