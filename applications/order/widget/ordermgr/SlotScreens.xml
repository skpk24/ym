<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="CommonSlotDecorator">
        <section>
            <actions>
                <set field="headerItem" value="quote"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                       
                           
                           
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
	<screen name="CommonZoneDecorator">
        <section>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
						<section>
                            <widgets>
                                <include-menu name="ZoneTabBar" location="component://order/widget/ordermgr/OrderMenus.xml"/>
                            </widgets>
                        </section>
                        <section>
                            <widgets>
                                <section>
                                    <widgets>
                                        <decorator-section-include name="body"/>
                                    </widgets>
                                </section>
                            </widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <!-- list all assets in a tabular format -->
    <screen name="FindSlot">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="slot"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
                 
       
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Slot Management">
                            <container>
                                <link target="findExistSlot" text="Find/Create Slot" style="buttontext"/>
                            </container>
                        
                            <include-form name="FindSlot" location="component://order/widget/ordermgr/SlotForms.xml"/>
                            <include-form name="ListSlot" location="component://order/widget/ordermgr/SlotForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section>
    </screen>
    
     <screen name="findExistSlot">
        <section>
            <actions>
               
                <set field="headerItem" value="slot"/>
               
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Slot Management">
                            <container>
                                <link target="EditSlot" text="create New Slot" style="buttontext"/>
                            </container>
                           
                            <include-form name="FindExitSlot" location="component://order/widget/ordermgr/SlotForms.xml"/>
                            <include-form name="ListExitSlot" location="component://order/widget/ordermgr/SlotForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section>
    </screen>
    
    
    <screen name="ViewSlot">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="slot"/>
               
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Slot Management">
                          <platform-specific>
                                <html><html-template location="component://order/webapp/ordermgr/slot/changeSlot.ftl"/></html>
                            </platform-specific>
                           
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section> 
    </screen>
    <screen name="FindZone">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="zone"/>
				<set field="tabButtonItem" value="FindZone"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
                 <set field="zoneId" from-field="parameters.zoneId"/>
                <entity-one entity-name="ZoneType" value-field="zone" auto-field-map="true"/>
            </actions>
            <widgets>
                <decorator-screen name="CommonZoneDecorator" >
                    <decorator-section name="body">
                         <screenlet title="Zone Management">
                         	<container>
                                <link target="EditZone" text="Create New Zone" style="buttontext"/>
                            </container>
                            <include-form name="FindZone" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                            <include-form name="ListZone" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section>
    </screen>
    
    <screen name="FindDeliveryBoy">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="deliveryBoyDetails"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
                 <set field="deliveryBoyId" from-field="parameters.deliveryBoyId"/>
                <entity-one entity-name="DeliveryBoyDetails" value-field="deliveryBoy" auto-field-map="true"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Delivery Boy Management">
                            <container>
                                <link target="EditDeliveryBoy" text="Create DeliveryBoy Details" style="buttontext"/>
                            </container>
                            <include-form name="FindDeliveryBoy" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                            <include-form name="ListDeliveryBoy" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section>
    </screen>
    
    <screen name="FindVehicleDetails">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="vehicleDetails"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
                 <set field="vehicleId" from-field="parameters.vehicleId"/>
                 
                <entity-one entity-name="VehicleDetails" value-field="Vehicle" auto-field-map="true"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Vehile Details Management">
                         <container>
                                <link target="EditVehicleDetails" text="Create vehicle Details" style="buttontext"/>
                            </container>
                            <include-form name="FindVehicleDetails" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                            <include-form name="ListVehicleDetails" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section>
    </screen>
    
    <screen name="FindPinIdQuickShipOrder">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="pinIdQuickShipOrder"/>
               
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Quick Ship Order">
                          <platform-specific>
                                <html><html-template location="component://order/webapp/ordermgr/slot/PinIdQuickShipOrder.ftl"/></html>
                            </platform-specific>
                           
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section> 
    </screen>
    <screen name="fulfillOrder">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="fulfillOrder"/>
                <script location="component://order/webapp/ordermgr/WEB-INF/actions/order/findOrdersForFulFillment.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="FulFill Order">
                          	<platform-specific>
                                <html><html-template location="component://order/webapp/ordermgr/slot/fulfillOrder.ftl"/></html>
                            </platform-specific>
                           
                        </screenlet>
                        <screenlet title="Order List">
                          	<platform-specific>
                                <html><html-template location="component://order/webapp/ordermgr/slot/findOrdersForFulFillment.ftl"/></html>
                            </platform-specific>
                           
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section> 
    </screen>
    <screen name="findOrdersForFulFillment">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="fulfillOrder"/>
               	<script location="component://order/webapp/ordermgr/WEB-INF/actions/order/findOrdersForFulFillment.groovy"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Quick Ship Order">
                          <platform-specific>
                                <html><html-template location="component://order/webapp/ordermgr/slot/findOrdersForFulFillment.ftl"/></html>
                            </platform-specific>
                           
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section> 
    </screen>
    
     <screen name="EditDeliveryBoy">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditRequirement"/>
                <set field="headerItem" value="deliveryBoyDetails"/>
                <set field="tabButtonItem" value="deliveryBoyDetails"/>
                
                <set field="deliveryBoyId" from-field="parameters.deliveryBoyId"/>
                
                <entity-one entity-name="DeliveryBoyDetails" value-field="deliveryBoy" auto-field-map="true" use-cache="false"/>

            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <screenlet title="Edit Delivery Boy">
                            <include-form name="EditDeliveryBoy" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    
    
   <screen name="EditVehicleDetails">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditRequirement"/>
                <set field="headerItem" value="vehicleDetails"/>
                <set field="tabButtonItem" value="EditVehicleDetails"/>

                <set field="VehicleId" from-field="parameters.VehicleId"/>
                
                <entity-one entity-name="VehicleDetails" value-field="Vehicle" auto-field-map="true"/>

            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <screenlet title="Edit VehicleDetails">
                            <include-form name="EditVehicleDetails" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <screen name="FindDeliveryBoyVehicleDetails">
        <section>
            <actions>
                <set field="titleProperty" value="OrderFindQuote"/>
                <set field="headerItem" value="deliveryBoyVehicleDetails"/>
                <set field="viewIndex" from-field="parameters.VIEW_INDEX" type="Integer"/>
                <set field="viewSize" from-field="parameters.VIEW_SIZE" type="Integer" default-value="50"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                         <screenlet title="Vehile Details Management">
                         <container>
                                <link target="EditDeliveryBoyVehicleDetails" text="Create Delivory Boy vehicle Details" style="buttontext"/>
                            </container>
                            <include-form name="FindDeliveryBoyVehicleDetails" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                            <include-form name="ListDeliveryBoyVehicleDetails" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
         </section>
    </screen>
    <screen name="EditDeliveryBoyVehicleDetails">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditRequirement"/>
                <set field="headerItem" value="deliveryBoyVehicleDetails"/>
                <set field="tabButtonItem" value="EditVehicleDetails"/>

                <set field="deliveryBoyVehicle" from-field="parameters.deliveryBoyVehicleId"/>
                
                <entity-one entity-name="DeliveryBoyVehicleDetails" value-field="deliveryBoyVehicle" auto-field-map="true"/>

            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <screenlet title="Edit Delivery Boy VehicleDetails">
                            <include-form name="EditDeliveryBoyVehicleDetails" location="component://order/widget/ordermgr/QuoteForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
     <screen name="EditSlot">
        <section>
            <actions>
                <set field="titleProperty" value="PageTitleEditRequirement"/>
                <set field="headerItem" value="slot"/>
                <set field="tabButtonItem" value="EditSlot"/>

                <set field="slotTypeId" from-field="parameters.slotTypeId"/>
                <entity-one entity-name="OrderSlotType" value-field="slot" auto-field-map="true"/>

            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <screenlet title="Edit Slot">
                            <include-form name="EditSlot" location="component://order/widget/ordermgr/SlotForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
</screens>
